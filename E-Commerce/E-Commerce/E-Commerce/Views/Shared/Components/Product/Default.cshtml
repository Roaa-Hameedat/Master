<div class="container-fluid pt-5">
    <div class="text-center mb-4" id="products">
        <h2 class="section-title px-5"><span class="px-2">All Products</span></h2>
        </div>
        <div class="row px-xl-5 pb-3">
@foreach (var x in Model)
    {
            <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <img class="~/img-fluid w-100" src="@Url.Content(x.Productimg)" alt="" style="height:25rem; width:15rem;">
                </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                    <h6 class="text-truncate mb-3">@x.Productname</h6>
                    <div class="d-flex justify-content-center">
                        <h6>@x.Productprice JD</h6>
                    </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                    <a asp-action="ProductDetails" asp-controller="Products" asp-route-id="@x.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                    <a asp-action="AddtoCart" asp-controller="Products" asp-route-id="@x.ProductId" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                    
                    </div>
                </div>
            </div>
            }
            </div>
            </div>