@model IEnumerable<E_Commerce.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>All Categories</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New Category</a>
</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoryname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoryimg)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Categoryname)
            </td>
            <td>
               <img src="@Url.Content(item.Categoryimg)" width="100">
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                <a class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
